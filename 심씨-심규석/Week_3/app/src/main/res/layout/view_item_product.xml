<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="12dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/img_search_item1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />



    <View
        android:id="@+id/wishListButton"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@drawable/shape_circle_white"
        android:layout_marginVertical="14dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintEnd_toEndOf="@id/image"
        app:layout_constraintTop_toTopOf="@id/image"
        />
    <ImageView
        android:id="@+id/isWishListIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/ic_red_heart"
        app:layout_constraintStart_toStartOf="@id/wishListButton"
        app:layout_constraintEnd_toEndOf="@id/wishListButton"
        app:layout_constraintTop_toTopOf="@id/wishListButton"
        app:layout_constraintBottom_toBottomOf="@id/wishListButton"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskr_medium"
            android:textColor="@color/black"
            android:includeFontPadding="false"
            android:textSize="14sp"
            android:layout_marginTop="14dp"
            android:text="Nike" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Traning Socks" />

        <TextView
            android:id="@+id/colors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4Colors" />

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="@font/notosanskr_medium"
            android:textColor="@color/black"
            android:includeFontPadding="false"
            android:textSize="14sp"
            android:text="US$22" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>