<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.umc.myapplication.fragment.HomeFragment"
        tools:layout="@layout/fragment_home">
        <!-- ★ 이 action이 반드시 있어야 합니다 -->
        <action
            android:id="@+id/action_homeFragment_to_albumFragment"
            app:destination="@id/albumFragment" />
    </fragment>

    <fragment
        android:id="@+id/albumFragment"
        android:name="com.umc.myapplication.fragment.AlbumFragment"
        tools:layout="@layout/fragment_album">
        <argument android:name="title"    app:argType="string"  android:defaultValue=""/>
        <argument android:name="artist"   app:argType="string"  android:defaultValue=""/>
        <argument android:name="imageRes" app:argType="integer" android:defaultValue="0"/>
    </fragment>
</navigation>
